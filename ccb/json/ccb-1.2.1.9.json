  "title": "Closing Homage",
  "children": [
    {
      "type": "group",
      "children": [
        {
          "type": "verse",
          "html": "[ Arahaṃ ] sammāsambuddho bha꜕gavā"
        },
        {
          "type": "verse",
          "html": "Buddhaṃ bha꜕gavantaṃ a꜕bhi꜓vādemi"
        }
      ]
    },
    {
      "type": "aside",
      "right": true,
      "html": "Bow"
    },
    {
      "type": "group",
      "children": [
        {
          "type": "verse",
          "html": "[ Svākkhā꜓to ] bha꜕gava꜓tā dhammo"
        },
        {
          "type": "verse",
          "html": "Dhammaṃ namassāmi"
        }
      ]
    },
    {
      "type": "aside",
      "right": true,
      "html": "Bow"
    },
    {
      "type": "group",
      "children": [
        {
          "type": "verse",
          "html": "[ Supaṭi꜕panno ] bha꜕gava꜕to sāvaka꜕saṅgho"
        },
        {
          "type": "verse",
          "html": "Sa꜓ṅghaṃ na꜕māmi"
        }
      ]
    },
    {
      "type": "aside",
      "right": true,
      "html": "Bow"
    }
  ]
