    },
    {
      "type": "group",
      "lang": "pi",
      "children": [
        {
          "type": "verse",
          "html": "Dhammo ha꜕ve rakkha꜕ti꜕ dhamma꜓-cāriṃ"
        },
        {
          "type": "verse",
          "html": "Dhammo su꜕ciṇṇo su꜕kham-āvahāti"
        },
        {
          "type": "verse",
          "html": "Esā꜓ni꜕saṃso dhamme su꜕ciṇṇe"
        }
